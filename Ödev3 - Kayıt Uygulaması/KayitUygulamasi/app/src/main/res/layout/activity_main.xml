<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/txtMaster"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="Kayıt Formu"
            android:gravity="center"
            android:textSize="30dp"
            android:fontFamily="sans-serif-black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/txtAd"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="İsim"
            android:layout_marginLeft="20dp"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_below="@id/txtMaster"/>
        <EditText
            android:id="@+id/edTxtAd"
            android:layout_width="250dp"
            android:layout_height="50dp"

            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginLeft="120dp"
            android:layout_below="@id/txtMaster"
            />
        <TextView
            android:id="@+id/txtSoyad"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="Soyisim"
            android:layout_marginLeft="20dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_below="@id/txtAd"
            android:gravity="center"

            />
        <EditText
            android:id="@+id/edTxtSoyad"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_below="@id/edTxtAd"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txtYas"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="Yaş"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="23sp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_below="@id/txtSoyad"
            />
        <EditText
            android:id="@+id/edTxtYas"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="120dp"
            android:layout_below="@id/edTxtSoyad"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txtMail"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="E-Posta"
            android:layout_marginLeft="20dp"
            android:textSize="23sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_below="@id/txtYas"
            />
        <EditText
            android:id="@+id/edTxtMail"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="120dp"
            android:layout_below="@id/edTxtYas"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txtPw"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="Şifre"
            android:layout_marginLeft="20dp"
            android:textSize="23sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_below="@id/txtMail"
            />

        <EditText
            android:id="@+id/edTxtPw"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="120dp"
            android:layout_below="@id/edTxtMail"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/txtPwAgain"
            android:layout_width="90dp"
            android:layout_height="40sp"
            android:layout_below="@id/txtPw"
            android:layout_marginTop="4dp"
            android:text="Tekrar Şifre"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textSize="17sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edTxtPwAgain"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginLeft="120dp"
            android:layout_below="@id/edTxtPw"
            android:ems="10"
            android:inputType="textPassword"
            />
        <Button
            android:id="@+id/btnSave"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:textColor="#FFFFFF"
            android:background="#000000"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/edTxtPwAgain"
            android:layout_marginTop="50dp"
            android:text="Kayıt"
            android:textSize="30dp"
            android:textStyle="bold"
            />



    </RelativeLayout>

</RelativeLayout>